<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchBookFragment">

    <fragment
        android:id="@+id/bookListFragment"
        android:name="com.example.bookapp.presentation.ui.BookListFragment"
        android:label="fragment_book_list"
        tools:layout="@layout/fragment_book_list">
        <argument
            android:name="bookName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.bookapp.presentation.ui.BookDetailFragment"
        android:label="fragment_book_detail"
        tools:layout="@layout/fragment_book_detail">
        <action
            android:id="@+id/action_bookDetailFragment_to_bookListFragment"
            app:destination="@id/bookListFragment"
            app:popUpTo="@id/bookListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/searchBookFragment"
        android:name="com.example.bookapp.presentation.ui.SearchBookFragment"
        android:label="fragment_search_book">
        <action
            android:id="@+id/action_searchBookFragment_to_bookListFragment"
            app:destination="@id/bookListFragment" />
    </fragment>
</navigation>